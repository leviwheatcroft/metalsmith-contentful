{
  "name": "metalsmith-contentful",
  "version": "0.0.0",
  "description": "metalsmith plugin scrape content from contentful",
  "main": "dist/index.js",
  "scripts": {
    "docs": "rm -fr ./docs/* && docker -o ./docs -I -x dist,.README.md,test/fixtures,node_modules,docs,.store",
    "readme": "node-readme",
    "gh-pages": "gh-pages -d docs",
    "build": "npm run babel && npm run readme && npm run docs && cp docs/README.md.html docs/index.html && npm run gh-pages",
    "babel": "cross-env NODE_ENV=node6 babel lib -d dist",
    "babel:watch": "cross-env NODE_ENV=node6 babel lib -d dist -w",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text --check-coverage --lines 100 npm run test",
    "test": "cross-env DEBUG=metalsmith*,flashheart NODE_ENV=test mocha --compilers js:babel-register test/index",
    "test:watch": "cross-env NODE_ENV=test mocha --compilers js:babel-register --watch test",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leviwheatcroft/metalsmith-contentful.git"
  },
  "keywords": [
    "metalsmith",
    "plugin",
    "mime",
    "type"
  ],
  "author": "Levi Wheatcroft <levi@wheatcrofts.com.au> (http://leviwheatcroft.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leviwheatcroft/metalsmith-contentful/issues"
  },
  "homepage": "https://github.com/leviwheatcroft/metalsmith-contentful#readme",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "async": "^2.5.0",
    "contentful": "^4.6.1",
    "debug": "^2.6.8",
    "flashheart": "^2.9.0",
    "metalsmith-cache": "^1.1.0",
    "nedb": "^1.8.0",
    "promise-spool": "^1.0.6",
    "slugify": "^1.2.1",
    "vow": "^0.4.13"
  },
  "devDependencies": {
    "metalsmith": "^2.2.0",
    "babel-cli": "^6.16.0",
    "config": "^1.24.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "cross-env": "^3.1.3",
    "docker": "^1.0.0",
    "eslint": "^3.7.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "gh-pages": "^0.12.0",
    "lodash": "^4.17.4",
    "mocha": "^3.1.2",
    "mocha-eslint": "^3.0.1",
    "nock": "^9.0.2",
    "node-readme": "^0.1.9",
    "node-resemble-js": "^0.1.1",
    "nyc": "^8.3.1",
    "sinon": "^1.17.7"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "installedESLint": true,
    "plugins": [
      "standard",
      "babel"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "babel": {
    "presets": [
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015-node6"
        ],
        "plugins": [
          "istanbul"
        ]
      },
      "node4": {
        "presets": [
          "es2015-node4"
        ]
      },
      "node6": {
        "presets": [
          "es2015-node6"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "directories": {
    "test": "test"
  }
}
